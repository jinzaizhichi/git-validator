{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.6.10",
  "engines": {
    "pnpm": "^8.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "install": "pnpm build",
    "postinstall": "git-validator install",
    "style": "git-validator",
    "style:update": "git-validator -u",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.6.2",
    "git-validator": "workspace:^",
    "typescript": "^5.2.2"
  }
}
