{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.6.10",
  "engines": {
    "pnpm": "^8.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "install": "pnpm build",
    "postinstall": "git-validator install",
    "lint": "git-validator",
    "lint:fix": "git-validator -wf",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "release": "pnpm test && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.4.7",
    "@zanminkian/tsconfig": "^0.5.1",
    "git-validator": "workspace:^",
    "typed-jest": "^0.1.1",
    "typescript": "^5.1.6"
  }
}
