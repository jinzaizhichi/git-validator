    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@types/node": "20.11.20",
    "git-validator": "workspace:^",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@8.6.10",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": "^8.0.0"
  }
}
